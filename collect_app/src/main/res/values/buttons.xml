<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Collect.Button.Custom" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.Collect.Button.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?colorOnSecondary</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconSize">32dp</item>
    </style>

    <style name="Widget.Collect.Button.OutlinedIconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?colorOnSurface</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconSize">32dp</item>
    </style>

    <style name="Widget.Collect.Button.WidgetAnswer" parent="Widget.Collect.Button.Custom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_small</item>
    </style>

    <style name="Widget.Collect.Button.BottomOption" parent="Widget.Collect.Button.Custom">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Widget.Collect.Button.FullWidth" parent="Widget.Collect.Button.Custom">
        <item name="android:paddingTop">@dimen/margin_standard</item>
        <item name="android:paddingBottom">@dimen/margin_standard</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Widget.Collect.ImageButton.Custom.Light" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/light_theme_tint_list</item>
    </style>

    <style name="Widget.Collect.ImageButton.Custom.Dark" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/dark_theme_tint_list</item>
    </style>

    <style name="Widget.Collect.ImageButton.MapButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tintMode">src_in</item>
        <item name="android:tint">@color/map_button_tint_list</item>
    </style>

</resources>
